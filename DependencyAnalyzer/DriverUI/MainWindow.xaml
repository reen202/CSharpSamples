<Window x:Class="DriverUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="257.313" Width="554.851">
    <Grid Margin="0,0,0.4,145.8">
        <Label x:Name="Label1" Content="Enter number of clients : " HorizontalAlignment="Left" Margin="70,45,0,0" VerticalAlignment="Top" Height="35" Width="175" FontSize="14"/>
        <TextBox x:Name="ClientCount" Text="{Binding Path=number_clients,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="251,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="number_clients_changed"/>
        <Button x:Name="SubmitButton" Content="Submit" HorizontalAlignment="Left" Margin="406,50,0,0" VerticalAlignment="Top" Width="75" Click="onSubmit"/>
    </Grid>
</Window>
